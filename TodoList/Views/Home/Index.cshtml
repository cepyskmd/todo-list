@{
    ViewData["Title"] = "Home Page";
}

<div class="p-3 bg-light rounded" style="width: 30rem">
    <div class="card mb-1">
        <div class="card-body">
            <h4 class="fw-bold">Todo List</h4>
            <form>
                <div class="d-flex">
                    <input type="text" class="form-control me-2" placeholder="Add a new task...">
                    <button class="btn btn-success square-btn" type="submit">+</button>
                </div>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h6 class="fw-bold">Task</h6>
            <div class="d-flex align-items-center p-2 rounded border-bottom">
                <input class="form-check-input me-2" type="checkbox">
                <span class="me-auto">Ini adalah item checklist</span>
                <button class="btn btn-sm">
                    <span>&times;</span>
                </button>
            </div>
            <div class="d-flex align-items-center p-2 rounded border-bottom">
                <input class="form-check-input me-2" type="checkbox">
                <span class="me-auto">Ini adalah item checklist</span>
                <button class="btn btn-sm">
                    <span>&times;</span>
                </button>
            </div>
        </div>
        <div class="card-body">
            <h6 class="fw-bold">Completed</h6>
            <div class="d-flex align-items-center p-2 rounded border-bottom">
                <input class="form-check-input me-2" type="checkbox">
                <span class="me-auto text-decoration-line-through">Ini adalah item checklist</span>
                <button class="btn btn-sm">
                    <span>&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>